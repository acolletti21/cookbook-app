
  <h2>Title: <%= @recipe.title %></h2>
  <h5>Updated On: <%= @recipe.friendly_updated_at %></h5>
  <h5>Prep Time: <%=@recipe.friendly_prep_time%></h5>
  <h4>Chef: <%= @recipe.chef %></h4>
  <h3>Ingredients: <%= @recipe.ingredients %></h3>

  <ul>
    <% @recipe.ingredients_list.each do |ingredient| %>
      <li><%=ingredient%></li>
    <% end %>
  </ul>

  <h3>Directions: <%= @recipe.directions %></h3>

  <ol>
    <% @recipe.directions.split(", ").each do |direction|%>
      <li> <%= direction %></li>
    <%end%>
  </ol>



  <a class="btn btn-info" href="/recipes/<%= @recipe.id %>/edit"> Edit Recipe</a>
  <%= link_to "Delete Recipe", "/recipes/#{@recipe.id}", class: "btn btn-danger", method: :delete %>


